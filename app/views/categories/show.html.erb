<div class="basiccontainer">
	<h1 class="fancyfont"><%= @category.name %></h1>

	<div class = "table-responsive">
	<table class="table">
		<tr>
			<th>
			  	<p>Activity</p>
			</th>
			<th>
			  	<p>Location</p>
			</th>
			<th>
			  	<p>Link</p>
			</th>
		</tr>
		<% @activities.each do |a| %>
			<% if a.categories.include?(@category) %>
				<tr>
					<td>
						<%= link_to a.name, a %> 
					</td>
					<td>
						<%=a.location%>
					</td>
					<td>
						<a href="<%=a.link%>"><%= a.link %></a>
					</td>
				</tr>
			<%end%>
		<%end%>
	</table>
</div>

<%= link_to "Edit Category", edit_category_path(@category) %> <%= link_to "Delete Category", @category, method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>

</div>